<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.fudanuniversity.cms.repository.mapper.CmsBulletinMapper">

    <!-- 返回结果集 -->
    <resultMap id="CmsBulletinMap" type="com.fudanuniversity.cms.repository.entity.CmsBulletin">
        <result column="id" property="id"/>
        <result column="stu_id" property="stuId"/>
        <result column="title" property="title"/>
        <result column="content" property="content"/>
        <result column="is_read" property="isRead"/>
        <result column="create_time" property="createTime"/>
        <result column="modify_time" property="modifyTime"/>
    </resultMap>

    <!-- 字段列表信息 -->
    <sql id="_field_list">
        `id`, `stu_id`, `title`, `content`, `is_read`, `create_time`,  `modify_time`
    </sql>

    <!-- 值列表信息 -->
    <sql id="_value_list">
        #{id}, #{stuId}, #{title}, #{content}, #{isRead}, #{createTime},  #{modifyTime}
    </sql>

    <!-- 普通条件查询 -->
    <sql id="_common_where">
        <if test="id != null">
            AND `id` = #{id}
        </if>
        <if test="stuId != null">
            AND `stu_id` = #{stuId}
        </if>
        <if test="title != null">
            AND `title` = #{title}
        </if>
        <if test="content != null">
            AND `content` = #{content}
        </if>
        <if test="isRead != null">
            AND `is_read` = #{isRead}
        </if>
    </sql>

    <!-- 通用排序 -->
    <sql id="_common_sorts">
        <if test="sorts != null">
            ORDER BY
            `id` desc
        </if>
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO
            `cms_bulletin`(`stu_id`, `title`, `content`, `is_read`, `create_time`, `modify_time`)
        VALUES
        <trim prefix="(" suffix=")" suffixOverrides=",">
            #{stuId}, #{title}, #{content}, #{isRead}, #{createTime}, #{modifyTime}
        </trim>
    </insert>

    <insert id="bulkUpsert" parameterType="list">
        INSERT INTO
            `cms_bulletin`(`title`, `content`, `create_time`, `modify_time`)
        VALUES
        <foreach collection="list" item="data" separator=",">
            (#{data.title}, #{data.content}, #{data.createTime}, #{data.modifyTime})
        </foreach>
        ON DUPLICATE KEY UPDATE
       `title` = VALUES(`title`), 
       `content` = VALUES(`content`), 
       `create_time` = `create_time`, 
       `modify_time` = VALUES(`modify_time`)
    </insert>

    <update id="updateById">
        UPDATE `cms_bulletin`
        <trim prefix="SET" suffixOverrides=",">
            <if test="isRead != null">
                `is_read` = #{isRead},
            </if>
            <if test="modifyTime != null">
                `modify_time` = #{modifyTime},
            </if>
        </trim>
        WHERE `id` = #{id}
        LIMIT 1
    </update>

    <delete id="deleteById">
        <![CDATA[
        DELETE FROM `cms_bulletin` WHERE `id` = #{id} LIMIT 1
        ]]>
    </delete>

    <select id="selectListByParam" parameterType="map" resultMap="CmsBulletinMap">
        SELECT
        <include refid="_field_list"/>
        FROM `cms_bulletin`
        <trim prefix="WHERE" prefixOverrides="AND" suffix="">
            <include refid="_common_where"/>
        </trim>
        <include refid="_common_sorts"/>
        LIMIT #{offset}, #{limit}
    </select>

    <select id="selectCountByParam" parameterType="map" resultType="java.lang.Long">
        SELECT COUNT(*)
        FROM `cms_bulletin`
        <trim prefix="WHERE" prefixOverrides="AND" suffix="">
            <include refid="_common_where"/>
        </trim>
    </select>

    <update id="readAllBulletin" parameterType="map">
        UPDATE `cms_bulletin`
        <trim prefix="SET" suffixOverrides=",">
            <if test="isRead != null">
                `is_read` = #{isRead},
            </if>
            <if test="modifyTime != null">
                `modify_time` = #{modifyTime},
            </if>
        </trim>
        WHERE `stu_id` = #{stuId} AND `is_read` = 0
    </update>
</mapper>